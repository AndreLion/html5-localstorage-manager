{
  "manifest_version": 2,
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "default_locale": "en",
  "version": "1.7.1",
  "icons": { 
	"16": "icon-128.png",
	"48": "icon-128.png",
	"128": "icon-128.png" 
  },
  "page_action": {
	"default_title": "HTML5 Storage Manager All in One",
	"default_icon": {
      "19": "icon-19.png",
      "38": "icon-38.png"
    },
    "default_popup": "popup.html"
  },
  "permissions": [
	"tabs","storage","cookies"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    { "matches": ["http://*/*","https://*/*"], "js": ["lib/cookies.min.js","common.js","inject.js"] }
  ],
  "web_accessible_resources": [
	"lib/bootstrap.min.css",
	"lib/angular-sanitize.min.js",
	"lib/angular-sanitize.min.js.map",
	"popup.css",
	"popup.js",
	"common.js",
	"notification.html",
    "fonts/glyphicons-halflings-regular.woff",
    "fonts/glyphicons-halflings-regular.ttf",
	"notification.js",
	"indexedDB.js",
	"lib/angular.min.js",
	"lib/cookies.min.js",
	"lib/angular.min.js.map",
    "lib/ui-bootstrap-tpls-0.11.2.min.js"
  ],
  "options_page": "options.html"
}
