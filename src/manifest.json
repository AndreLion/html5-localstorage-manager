{
  "name": "Realtime JSON-Friendly Web Storage Manager",
  "description": "Editing JSON in local / session storage, cookie is a breeze!",
  "version": "2.1",
  "permissions": ["activeTab", "storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "24": "assets/icon24.png",
      "32": "assets/icon32.png"
    }
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "manifest_version": 2,
  "web_accessible_resources": [
    "popup.html"
  ]
}
